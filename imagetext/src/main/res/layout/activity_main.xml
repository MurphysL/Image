<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/p1"
    tools:context="com.example.lenovo.imagetext.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:textSize="60sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图像处理" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PrimaryColor"
        android:onClick="btn_PrimaryColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ColorMatrix"
        android:onClick="btn_ColorMatrix"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:onClick="btn_PixelsEffect"
        android:layout_height="wrap_content"
        android:text="PixelsEffect"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ImageMatrix"
        android:onClick="btn_ImageMatrix" />

    <Button
        android:text="Xfermode"
        android:onClick="btn_Xfermode"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Reflect"
        android:onClick="btn_Reflect"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Mesh"
        android:onClick="btn_Mesh"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>
